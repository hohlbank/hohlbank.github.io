{
  "rules": {
    "users": {
      "$username": {
        ".read": "auth != null",
        ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
        ".validate": "newData.hasChildren(['password', 'createdAt'])",
        "password": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "displayName": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "isAdmin": {
          ".validate": "newData.isBoolean()"
        }
      }
    },
    
    "cards": {
      "$username": {
        ".read": "auth != null && ($username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
        ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
        ".validate": "newData.hasChildren(['number', 'balance', 'holder', 'validThru', 'createdAt'])",
        "number": {
          ".validate": "newData.isString() && newData.val().matches(/^[0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4}$/)"
        },
        "balance": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "holder": {
          ".validate": "newData.isString()"
        },
        "validThru": {
          ".validate": "newData.isString() && newData.val().matches(/^[0-9]{2}\\/[0-9]{2}$/)"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    
    "cardHistory": {
      "$username": {
        "$historyId": {
          ".read": "auth != null && ($username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
          ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
          ".validate": "newData.hasChildren(['action', 'timestamp'])",
          "action": {
            ".validate": "newData.isString() && (newData.val() === 'create' || newData.val() === 'reissue')"
          },
          "cardNumber": {
            ".validate": "newData.isString()"
          },
          "oldCardNumber": {
            ".validate": "newData.isString()"
          },
          "newCardNumber": {
            ".validate": "newData.isString()"
          },
          "timestamp": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "transfers": {
      "$username": {
        "$transferId": {
          ".read": "auth != null && ($username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
          ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
          ".validate": "newData.hasChildren(['type', 'amount', 'date'])",
          "type": {
            ".validate": "newData.isString() && (newData.val() === 'sent' || newData.val() === 'received')"
          },
          "amount": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "recipient": {
            ".validate": "newData.isString()"
          },
          "recipientName": {
            ".validate": "newData.isString()"
          },
          "sender": {
            ".validate": "newData.isString()"
          },
          "senderName": {
            ".validate": "newData.isString()"
          },
          "date": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "notifications": {
      "$username": {
        "$notificationId": {
          ".read": "auth != null && ($username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
          ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
          ".validate": "newData.hasChildren(['type', 'message', 'date'])",
          "type": {
            ".validate": "newData.isString() && (newData.val() === 'info' || newData.val() === 'success' || newData.val() === 'warning' || newData.val() === 'error')"
          },
          "message": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "date": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "chats": {
      "$chatId": {
        ".read": "auth != null && (data.child('participants/' + auth.uid).exists() || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
        ".write": "auth != null && (data.child('participants/' + auth.uid).exists() || !data.exists())",
        ".validate": "newData.hasChildren(['participants', 'createdAt'])",
        "participants": {
          "$username": {
            ".validate": "newData.isString()"
          }
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "lastMessage": {
          ".validate": "newData.hasChildren(['text', 'timestamp'])",
          "text": {
            ".validate": "newData.isString()"
          },
          "timestamp": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "messages": {
      "$chatId": {
        "$messageId": {
          ".read": "auth != null && (root.child('chats/' + $chatId + '/participants/' + auth.uid).exists() || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
          ".write": "auth != null && root.child('chats/' + $chatId + '/participants/' + auth.uid).exists()",
          ".validate": "newData.hasChildren(['sender', 'senderName', 'text', 'timestamp'])",
          "sender": {
            ".validate": "newData.isString() && newData.val() === auth.uid"
          },
          "senderName": {
            ".validate": "newData.isString()"
          },
          "text": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 5000"
          },
          "timestamp": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "threads": {
      "$threadId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['title', 'content', 'author', 'authorName', 'createdAt'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 200"
        },
        "content": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 10000"
        },
        "author": {
          ".validate": "newData.isString()"
        },
        "authorName": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "repliesCount": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "views": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        }
      }
    },
    
    "replies": {
      "$threadId": {
        "$replyId": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['content', 'author', 'authorName', 'createdAt'])",
          "content": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 5000"
          },
          "author": {
            ".validate": "newData.isString()"
          },
          "authorName": {
            ".validate": "newData.isString()"
          },
          "createdAt": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    
    "loginHistory": {
      "$username": {
        "$loginId": {
          ".read": "auth != null && ($username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true)",
          ".write": "$username === auth.uid || root.child('users/' + auth.uid + '/isAdmin').val() === true",
          ".validate": "newData.hasChildren(['timestamp', 'ip'])",
          "timestamp": {
            ".validate": "newData.isString()"
          },
          "ip": {
            ".validate": "newData.isString()"
          }
        }
      }
    }
  }
}
